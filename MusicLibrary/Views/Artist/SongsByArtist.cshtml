@model MusicLibrary.Models.Artist

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <h3>Songs</h3>
    <ul>
        @foreach(Song s in Model.Songs)
        {
            <li>@s.Name (@s.Genre.Name)</li>
        }
    </ul>




</div>
<div>
    
    <a asp-action="Index">Back to List</a>
</div>
